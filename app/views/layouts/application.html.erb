<!DOCTYPE html>
<html>
<head>
  <title>EngineeringProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <p></p>
  <% if user_signed_in? %>
      <div id="menu">
        <ul>
          <li><%= link_to "Request", feature_request_index_path, method: :get %></li>
          <li><%= link_to "Staff", staffs_staff_list_path, method: :get %></li>
          <li><%= link_to "Product Area", product_area_index_path, method: :get %></li>
          <li><%= link_to "Client", clients_path, method: :get %></li>

          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
  <% end %>
  <p class="notice"><%= notice %></p>

  <p class="alert"><%= alert %></p>
  <%= yield %>

</div>
</body>
</html>
<script>

    $(".notice").fadeOut(8000);
    $(document).ready(function () {
        $('#menu a').each(function (index) {
            if (this.href.trim() == window.location)
                $(this).addClass("active");
        });
    });

</script>
<style>
    .active {
        background-color: #d9534f;
    }
</style>
