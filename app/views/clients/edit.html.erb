<%= form_for @clients, url: client_path do |f| %>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: '', class: 'form-control', :required => 'required' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: '', class: 'form-control', :required => 'required' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: '', class: 'form-control', :required => 'required' %>
    </div>
    <div class="form-group">

      <%= f.label :title %>
      <%= f.text_field :title, placeholder: '', class: 'form-control', :required => 'required' %>


    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, placeholder: '', class: 'form-control', :required => 'required' %>
    </div>

    <%= f.submit f.object.new_record? ? 'Update' : 'Update', class: 'btn btn-primary city_btn' %>
<% end %>
