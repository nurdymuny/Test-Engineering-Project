<div>
  <h1>
    <span>Product Area</span>

  </h1>

  <%= link_to "Add New Request", new_product_area_path, class: 'add_new' %>

  <p></p>
  <hr>

  <table class="table table-bordered" border="1" width="100%" style="border-collapse: collapse;">
    <thead>
    <tr>

      <th>Product Area</th>
      <th>Product Description</th>
      <th>Edit</th>
      <th>Delete</th>

    </tr>
    </thead>
    <tbody>

    <%- @product.each do |c| %>
        <tr>
          <td><%= c.product_area %></td>
          <td><%= c.product_description %></td>
          <td>
            <%= link_to "Edit", edit_product_area_path(c.id), class: 'btn btn-success' %></td>
          <td>
            <%= link_to "Delete", c, method: :delete, data: {confirm: 'Are you sure you want to delete this product area?'}, class: 'btn btn-danger' %>
          </td>
    <% end %>
    </tr>
    </tbody>
  </table>
</div>
</div>
</div>